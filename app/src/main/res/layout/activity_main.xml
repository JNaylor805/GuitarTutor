<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/splash"
    android:alpha="0.7"
    tools:context="com.example.james.guitartutor.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:padding="10dp"
        android:id="@+id/Email_Form"
        android:background="@drawable/shape"
        android:layout_above="@+id/Password_Form"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:text="@string/email_form"/>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:padding="10dp"
        android:id="@+id/Password_Form"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/Email_Form"
        android:background="@drawable/shape"
        android:layout_alignEnd="@+id/Email_Form"
        android:text="@string/password_form"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="@string/play_button_text"
        android:id="@+id/login_button"
        android:layout_below="@+id/Password_Form"
        android:layout_alignEnd="@+id/Password_Form"
        android:background="@color/green"
        android:layout_alignStart="@+id/Password_Form"
        android:onClick="loginButton"/>
</RelativeLayout>
